{
  "name": "secure-guard",
  "version": "1.0.0",
  "description": "Production-quality CLI tool for detecting Spring Boot configuration misconfigurations",
  "main": "dist/index.js",
  "bin": {
    "secure-guard": "./dist/cli/main.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli/index.js",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "scan": "node dist/cli/main.js scan",
    "scan:ci": "node dist/cli/main.js scan --format sarif",
    "scan:json": "node dist/cli/main.js scan --format json",
    "scan:all": "node dist/cli/main.js scan --profile all",
    "prepublishOnly": "npm run build && npm test"
  },
  "keywords": [
    "spring-boot",
    "security",
    "configuration",
    "scanner",
    "ci",
    "devops"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "js-yaml": "^4.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
